<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="汇率换算"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_back_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/cs_white_8_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:drawableStart="@mipmap/ic_za"
                android:drawablePadding="6dp"
                android:text="CNY(人民币)"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_cny"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_ebe_4"
                android:inputType="number"
                android:paddingStart="16dp"
                android:textColorHint="#1186F7"
                android:textColor="#1186F7"
                android:textSize="14sp"
                tools:text="0.2431" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@mipmap/ic_za"
                android:drawablePadding="6dp"
                android:text="USD(美元)"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_usd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_ebe_4"
                android:inputType="number"
                android:paddingStart="16dp"
                android:textColor="#1186F7"
                android:textColorHint="#1186F7"
                android:textSize="14sp"
                tools:text="0.2431" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@mipmap/ic_za"
                android:drawablePadding="6dp"
                android:text="EUR (欧元)"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_eur"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_ebe_4"
                android:inputType="number"
                android:textColorHint="#1186F7"
                android:paddingStart="16dp"
                android:textColor="#1186F7"
                android:textSize="14sp"
                tools:text="0.2431" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@mipmap/ic_za"
                android:drawablePadding="6dp"
                android:text="JPY(日元)"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_jpy"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_ebe_4"
                android:inputType="number"
                android:paddingStart="16dp"
                android:textColorHint="#1186F7"
                android:textColor="#1186F7"
                android:textSize="14sp"
                tools:text="0.2431" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@mipmap/ic_za"
                android:drawablePadding="6dp"
                android:text="KRW (韩元)"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_krw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_ebe_4"
                android:inputType="number"
                android:textColorHint="#1186F7"
                android:paddingStart="16dp"
                android:textColor="#1186F7"
                android:textSize="14sp"
                tools:text="0.2431" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@mipmap/ic_za"
                android:drawablePadding="6dp"
                android:text="GBP(英镑)"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_gbp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_ebe_4"
                android:inputType="number"
                android:textColorHint="#1186F7"
                android:paddingStart="16dp"
                android:textColor="#1186F7"
                android:textSize="14sp"
                tools:text="0.2431" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
