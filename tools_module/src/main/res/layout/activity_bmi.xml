<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFAFA">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="BMI计算"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_back_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <View
        android:id="@+id/v_bg"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <View
        android:id="@+id/v_1"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/v_bg"
        app:layout_constraintStart_toStartOf="@id/v_bg"
        app:layout_constraintTop_toTopOf="@id/v_bg" />

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableStart="@mipmap/ic_bmi_sex"
        android:drawablePadding="14dp"
        android:gravity="center"
        android:text="性别"
        android:textColor="#333333"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/v_1"
        app:layout_constraintStart_toStartOf="@id/v_1"
        app:layout_constraintTop_toTopOf="@id/v_1" />

    <ImageView
        android:id="@+id/iv_sex_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:src="@mipmap/ic_bmi_m_c"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_sex"
        app:layout_constraintStart_toEndOf="@id/tv_sex"
        app:layout_constraintTop_toTopOf="@id/tv_sex" />

    <ImageView
        android:id="@+id/iv_sex_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@mipmap/ic_bmi_f_u"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_sex"
        app:layout_constraintStart_toEndOf="@id/iv_sex_m"
        app:layout_constraintTop_toTopOf="@id/tv_sex" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="#B1D9FF"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/v_2"
        app:layout_constraintEnd_toEndOf="@id/v_bg"
        app:layout_constraintStart_toStartOf="@id/v_bg" />

    <View
        android:id="@+id/v_2"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:background="@drawable/cs_white_8_bg"
        android:backgroundTint="#F4F4F4"
        app:layout_constraintEnd_toEndOf="@id/v_bg"
        app:layout_constraintStart_toStartOf="@id/v_bg"
        app:layout_constraintTop_toTopOf="@id/v_bg" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="#B1D9FF"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/v_bg"
        app:layout_constraintStart_toStartOf="@id/v_bg"
        app:layout_constraintTop_toBottomOf="@id/v_2" />

    <TextView
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawablePadding="14dp"
        android:gravity="center"
        android:text="我的身高"
        android:textColor="#2A2A2A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/v_2"
        app:layout_constraintStart_toStartOf="@id/v_2"
        app:layout_constraintTop_toTopOf="@id/v_2" />

    <TextView
        android:id="@+id/tv_height_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:ellipsize="end"
        android:gravity="end"
        android:lines="1"
        android:text="如：175"
        android:textColor="#992A2A2A"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/v_2"
        app:layout_constraintEnd_toStartOf="@id/tv_height_unit"
        app:layout_constraintStart_toEndOf="@id/tv_height"
        app:layout_constraintTop_toTopOf="@id/v_2" />

    <TextView
        android:id="@+id/tv_height_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="厘米cm"
        android:textColor="#8588A4"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@id/v_2"
        app:layout_constraintEnd_toEndOf="@id/v_2"
        app:layout_constraintTop_toTopOf="@id/v_2" />

    <View
        android:id="@+id/v_3"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cs_white_8_bg"
        android:backgroundTint="#F4F4F4"
        app:layout_constraintEnd_toEndOf="@id/v_bg"
        app:layout_constraintStart_toStartOf="@id/v_bg"
        app:layout_constraintTop_toBottomOf="@id/v_2" />

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawablePadding="14dp"
        android:gravity="center"
        android:text="我的体重"
        android:textColor="#2A2A2A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/v_3"
        app:layout_constraintStart_toStartOf="@id/v_3"
        app:layout_constraintTop_toTopOf="@id/v_3" />

    <TextView
        android:id="@+id/tv_weight_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:ellipsize="end"
        android:gravity="end"
        android:lines="1"
        android:text="如：68"
        android:textColor="#992A2A2A"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/v_3"
        app:layout_constraintEnd_toStartOf="@id/tv_weight_unit"
        app:layout_constraintStart_toEndOf="@id/tv_weight"
        app:layout_constraintTop_toTopOf="@id/v_3" />

    <TextView
        android:id="@+id/tv_weight_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="千克kg"
        android:textColor="#8588A4"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@id/v_3"
        app:layout_constraintEnd_toEndOf="@id/v_3"
        app:layout_constraintTop_toTopOf="@id/v_3" />

    <com.tools.module.wright.KeyboardView
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
