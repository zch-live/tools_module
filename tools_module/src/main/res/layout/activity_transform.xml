<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="尺子"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_back_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <View
        android:id="@+id/v_bg"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <View
        android:id="@+id/v_1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="@drawable/cs_white_8_bg"
        android:backgroundTint="#F4F4F4"
        app:layout_constraintBottom_toTopOf="@id/v_line"
        app:layout_constraintEnd_toEndOf="@id/v_bg"
        app:layout_constraintStart_toStartOf="@id/v_bg" />

    <TextView
        android:id="@+id/tv_label_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:gravity="center|start"
        android:text="---"
        android:textColor="#2A2A2A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/v_1"
        app:layout_constraintTop_toTopOf="@id/v_1" />

    <TextView
        android:id="@+id/tv_input_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="请输入"
        android:textColor="#992A2A2A"
        android:textSize="19sp"
        app:layout_constraintEnd_toStartOf="@id/tv_unit_1"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toStartOf="@id/tv_label_1"
        app:layout_constraintTop_toBottomOf="@id/tv_label_1" />

    <TextView
        android:id="@+id/tv_unit_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:drawablePadding="8dp"
        android:gravity="center|end"
        android:text=">"
        android:textColor="#8588A4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/v_1"
        app:layout_constraintEnd_toEndOf="@id/v_1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/tv_input_1"
        app:layout_constraintTop_toTopOf="@id/v_1" />


    <View
        android:id="@+id/v_line"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="@id/v_bg"
        app:layout_constraintEnd_toEndOf="@id/v_bg"
        app:layout_constraintStart_toStartOf="@id/v_bg"
        app:layout_constraintTop_toTopOf="@id/v_bg" />

    <View
        android:id="@+id/v_2"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="@drawable/cs_white_8_bg"
        android:backgroundTint="#F4F4F4"
        app:layout_constraintEnd_toEndOf="@id/v_bg"
        app:layout_constraintStart_toStartOf="@id/v_bg"
        app:layout_constraintTop_toBottomOf="@id/v_line" />

    <TextView
        android:id="@+id/tv_label_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:gravity="center|start"
        android:text="---"
        android:textColor="#2A2A2A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/v_2"
        app:layout_constraintTop_toTopOf="@id/v_2" />

    <TextView
        android:id="@+id/tv_input_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="请输入"
        android:textColor="#992A2A2A"
        android:textSize="19sp"
        app:layout_constraintEnd_toStartOf="@id/tv_unit_2"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toStartOf="@id/tv_label_2"
        app:layout_constraintTop_toBottomOf="@id/tv_label_2" />

    <TextView
        android:id="@+id/tv_unit_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:drawablePadding="8dp"
        android:gravity="center|end"
        android:text=">"
        android:textColor="#8588A4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/v_2"
        app:layout_constraintEnd_toEndOf="@id/v_2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/tv_input_2"
        app:layout_constraintTop_toTopOf="@id/v_2" />

    <com.tools.module.wright.KeyboardView
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
